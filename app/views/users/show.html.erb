
<div class="container">
  <%= render 'layouts/flash',layouts: @layouts %>
  <div class="row">
    
    <div class="col-md-3">
    <table class="table table-striped">
<%= render 'books/list', user: @user, book: @book %>
</table>
  </div>
    
     <div class="col-md-8 offset-md-1">
       <h2>Books</h2>
       <table class="table table-striped">
    <thead>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
   </thead>
     <% @books.each do |f| %>
     <tr>
       <td>
        <%= link_to user_path(f.user.id) do %>
        <%= image_tag f.user.get_profile_image(100,100) %>
        <% end %>
       </td>
        <td><%=link_to f.title, book_path(f.id)%></td>
        <td><%= f.body %></td>
     </tr>
<% end %>
</table>
       </div>
     </div>
     </div>

