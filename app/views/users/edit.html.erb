<h1>Users#edit</h1>
<% if @user.errors.any? %>
  <%= @user.errors.count %>errors prohibited this obj from being saved:
 
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<h2>User info</h2>
<%= form_with model:@user, local:true do |f| %>
  <label for="inputName">Name</label>
  <p></p>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
  <p></p>
  <label for="inputImage">Image</label>
  <p></p>
  <%= f.file_field :profile_image, placeholder: "プロフィール画像",accept: "image/*" %>
  <p></p>
  <label for="introduction">Introduction</label>
  <p></p>
  <%= f.text_field :introduction, autofocus: true, id:"inputIntroduction", placeholder:"自己紹介"%>
  <p></p>
  <%= f.submit "Update User" %>
<% end %>