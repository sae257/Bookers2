  </tbody>
   </table>
 <div class="row">
      <%= link_to edit_user_path(user),class: "btn btn-outline-secondary btn-block" do %>
      <i class="fas fa-user-cog"></i>
      <% end %>
   </div>

<h2>New book</h2>
  <%= form_with model: Book.new do |f| %>
    <div class="form-group">
      <label for="book_title">Title</label><br>
      <input class="form-control book_title" type="text" name="book[title]" id="book_title">
    </div>

    <div class="form-group">
      <label for="book_body">Opinion</label><br>
      <textarea class="form-control book_body" name="book[body]" id="book_body"></textarea>
    </div>
    
      <input type="submit" name="commit" value="Create Book" class="btn-success" date-disable-with="Create Book">
  <% end %>

