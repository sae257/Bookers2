<div class="container"> 
<%= render 'layouts/flash',layouts: @layouts %>
 <div class="row">
  <div class="col-md-3">


<h1>Books#show</h1>
<table class="table table-striped">
<%= render 'list', user: @user %>
   </table>
  </div>
  
  <div class="col-md-8 offset-md-1">
  <h2>Book detail</h2>
  <table class="table table-striped">
   <tr>
  <td>
   <%= link_to user_path(@book.user.id) do %>
   <%= image_tag @book.user.get_profile_image(100, 100) %><br>
   <%= @book.user.name %>
   <% end %>
   </td>
  <td><%=link_to @book.title, book_path(@book.id) %></td>
  <td><%= @book.body %></td>
  
  
   <% if @book.user == current_user %>
    <td><%= link_to edit_book_path(@book), class: "btn btn-sm btn-success" do %>Edit<% end %><td>
    <td> <%= link_to book_path(@book), method: :delete, data: {confirm: "本当に消しますか?"}, class: "btn btn-sm btn-danger" do %>
    Destroy
  <% end %>
   </td>
   <% end %>
   </tr>
  </table>
</div>
</div>
</div>

